model Tag {
  id    Int        @id @default(autoincrement())
  name  String     @unique
  meals MealTag[]
}

model MealTag {
  mealItem   MealItem @relation(fields: [mealItemId], references: [id], onDelete: Cascade)
  mealItemId String
  tag        Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)
  tagId      Int

  @@id([mealItemId, tagId])
